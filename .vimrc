inoremap <Up> <NOP>
vnoremap <Up> <NOP>
inoremap <Down> <NOP>
vnoremap <Down> <NOP>
inoremap <Left> <NOP>
vnoremap <Left> <NOP>
inoremap <Right> <NOP>
vnoremap <Right> <NOP>
inoremap <Esc> <NOP>
inoremap jj <Esc>
noremap ı <Insert>
noremap İ <Insert>
syntax on
filetype on
set history=64
set nocompatible
set backspace=indent,eol,start
set ruler
set hlsearch
set ignorecase
set smartcase
set number
set list
set listchars=tab:▸\ ,eol:¬
highlight NonText ctermfg=black
highlight SpecialKey ctermfg=black
highlight LineNr ctermfg=blue
